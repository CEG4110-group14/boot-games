#!/usr/bin/env bash

# detecting distro, getting package manager + deps
if [[ $(uname -a) != *"arch"* ]]; then
    pkgman=pacman
    flags="-S"
    deps=$(cat pacman-deps.txt)
else
    pkgman=apt-get
    flags="install"
    deps=$(cat apt-deps.txt)
fi

# if the user ran this script as sudo
if [ $# -eq 1 ]; then
  sudo=
  flags+=" -y"
else
  sudo=sudo
fi

$sudo $pkgman $flags $deps

